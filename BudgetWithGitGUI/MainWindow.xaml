<Window x:Class="BudgetWithGitGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetWithGitGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="50">
            
            Home Budget
        </TextBlock>
        <Button 
            x:Name="openBtn" 
            Grid.Column="1" 
            Grid.Row="3" 
            Width="150" 
            Height="30" 
            Click="openBtn_Click" 
            Margin="24,37">
            Open Existing File
        </Button>
        <Button 
            x:Name="addExpense" 
            Grid.Column="2" 
            Grid.Row="3" 
            Width="150" 
            Height="30" 
            Click="addExpenseBtn_Click" 
            Margin="24,37">
            Add Expense
        </Button>
        <Button 
            x:Name="addCategory" 
            Grid.Column="3" 
            Grid.Row="3" 
            Width="150" 
            Height="30" 
            Click="addCategoryBtn_Click" 
            Margin="24,37">
            Add Category
        </Button>
        <ComboBox 
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Width="200"
            x:Name="categoryDropDownList">
        </ComboBox>
        <ComboBox 
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Width="200"
            x:Name="expenseDropDownList">
        </ComboBox>
    </Grid>

</Window>
