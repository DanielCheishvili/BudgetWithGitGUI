<Window x:Class="BudgetWithGitGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetWithGitGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button x:Name="openBtn" Grid.Column="1" Grid.Row="4" Width="150" Height="30" Click="openBtn_Click">Open Existing File</Button>
        <Button x:Name="addExpense" Grid.Column="2" Grid.Row="4" Width="150" Height="30" Click="addExpenseBtn_Click">Add Expense</Button>
        <Button x:Name="addCategory" Grid.Column="3" Grid.Row="4" Width="150" Height="30" Click="addCategoryBtn_Click">Add Category</Button>
        <ComboBox 
            x:Name="categoryDropDownList" 
            MouseDoubleClick="categoryDropDownList_MouseDoubleClick" SelectionChanged="categoryDropDownList_SelectionChanged"
            >
            
        </ComboBox>
    </Grid>
    
</Window>
